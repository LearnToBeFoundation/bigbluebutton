<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml"
		   width="30" height="30"
		   click="onClick()" styleName="whiteboardClearButtonStyle"
		   toolTip="{ResourceUtil.getInstance().getString('bbb.highlighter.toolbar.clear')}"
		   accessibilityName="{ResourceUtil.getInstance().getString('bbb.highlighter.toolbar.clear.accessibilityName')}">
	<mx:Script>
		<![CDATA[
            import org.bigbluebutton.modules.whiteboard.business.shapes.WhiteboardConstants;
            import org.bigbluebutton.modules.whiteboard.events.WhiteboardButtonEvent;
            import org.bigbluebutton.util.i18n.ResourceUtil;
			import mx.events.CloseEvent;
            import mx.controls.Alert;
            
            private function onClick():void {
                // Confirm clear using built-in alert
                var alert:Alert = Alert.show("Are you sure you want to clear the whiteboard?", "Confirm clear", Alert.YES | Alert.NO, this, 
                    alertClear, null, Alert.YES);
                
                /*var newX:Number = this.x + this.width - alert.width;
                var newY:Number = this.y + this.height + 5;*/
                                            
                alert.validateNow();
                //alert.move(newX, newY);
            }

            private function alertClear(e:CloseEvent):void {
                if (e.detail == Alert.YES) {
                    var event:WhiteboardButtonEvent = new WhiteboardButtonEvent(WhiteboardButtonEvent.WHITEBOARD_BUTTON_PRESSED);
                    event.graphicType = WhiteboardConstants.TYPE_CLEAR;
                    
                    dispatchEvent(event);
                }
            }

            public function setTool(gType:String, toolType:String):void {
                if(gType == WhiteboardConstants.TYPE_CLEAR) {
                    this.selected = true;
                } else {
                    this.selected = false;
                } 					
            }

		]]>
	</mx:Script>
</mx:Button>
